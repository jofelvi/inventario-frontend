import { useEffect, useState } from 'react';
import axios from 'axios';
import Link from 'next/link';
import endPoints from '@services/api';
import Sidebar from '@components/sidebar/Sidebar';
import { Main, Content, BackgroundContainer,Table, Title, Subtitle, FlexC, Space} from '@components/views/entries/styles';
import AddEntry from '@components/views/entries/addEntry/index';
import useAlert from '@hooks/useAlert';
import Alert from '@common/Alert';

const OrdersContent = () => {
  const [open, setOpen] = useState(false);
  const [orders, setOrders] = useState([]);
  const { alert, setAlert, toggleAlert } = useAlert();
  const [totalItems, setTotalItems] = useState(0);

  const columns = [
    {
      title: 'Fecha',
      dataIndex: 'createAt',
      key: 'createAt',
      render: (createAt) => <a>${createAt}</a>,
    },
    {
      title: 'Factura',
      dataIndex: 'bill',
      key: 'bill',
      render: (text, record) => (
        <Link href={`/orders/order/${record.id}`}>
          {text}
        </Link>
      ),
    },
    {
      title: 'Proveedor',
      dataIndex: 'provider',
      key: 'provider',
    },
    {
      title: 'Precio Total',
      dataIndex: 'total_price',
      key: 'total_price',
      render: (total_price) => <a>${total_price}</a>,
    },
    {
      key: 'action',
      render: (record) => (
        <Space size="middle">
          <Link href={`/orders/order/edit/${record.id}`}>
            <h2> Añadir items </h2>
          </Link>
        </Space>
      ),
    },
  ];

  useEffect(() => {
    async function getEntries() {
      const response = await axios.get(endPoints.orders.getOrders);
      setOrders(response.data);
      setTotalItems(response.data.length);
      
    }
    try {
      getEntries();
    } catch (error) {
      console.log(error);
    }
  }, [alert]);

  return (
    <>
      <Main>
        <Sidebar />
        <BackgroundContainer>
          <FlexC>
            <Title>Ordenes de Compra</Title>
            {open ? <Subtitle onClick={() => setOpen(false)}>Atras</Subtitle> : <Subtitle onClick={() => setOpen(true)}>Añadir Orden</Subtitle>}
          </FlexC>
          <Content>
            <Alert alert={alert} handleClose={toggleAlert} />
            {open ? <AddEntry setOpen={setOpen} setAlert={setAlert} /> 
            :
            <Table
            columns={columns}
            dataSource={orders}
            pagination={{
              pageSize: 10,
              total: totalItems,
            }}
            />
            }

          </Content>
        </BackgroundContainer>
      </Main>
    </>
  );
};

export default OrdersContent;
